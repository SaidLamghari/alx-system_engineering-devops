#!/usr/bin/env bash
# Fix this container so that Nginx
# is running as the nginx user.
# Autor: Said LAMGHARI
# Fix this container so that Nginx is running as user nginx

# Stop Apache2 if running
systemctl stop apache2

# Change ownership of /etc/nginx directory to nginx user
chown -R nginx:nginx /etc/nginx

# Change permissions of nginx.conf
chmod 644 /etc/nginx/nginx.conf

# Update Nginx port in default site configuration
sed -i 's/listen 80;/listen 8080;/' /etc/nginx/sites-available/default

# Restart Nginx service as the nginx user
systemctl restart nginx
