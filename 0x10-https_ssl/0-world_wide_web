#!/usr/bin/env bash
# Autor : SAID LAMGHARI

# Fonction pour rechercher un sous-domaine
function grxrdinfo() {
    dig "$1.$2" +short | awk 'BEGIN { FS = " " } { print "The subdomain " $1 " is a " $3 " record and points to " $4 }'
}

# Vérifier si le nombre d'arguments est correct
if [ $# -lt 1 ] || [ $# -gt 2 ]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

# Récupérer le nom de domaine et le sous-domaine (facultatif)
domain="$1"
subdomain="${2:-}"

# Vérifier si le nom de domaine est vide
if [ -z "$domain" ]; then
    echo "Error: Domain name cannot be empty."
    exit 1
fi

# Vérifier si le sous-domaine est vide
if [ -n "$subdomain" ] && [ -z "$subdomain" ]; then
    echo "Error: Subdomain cannot be empty."
    exit 1
fi

# Rechercher les informations sur le sous-domaine
if [ -z "$subdomain" ]; then
    # Rechercher les informations sur les sous-domaines www, lb-01, web-01 et web-02
    grxrdinfo "$domain" www
    grxrdinfo "$domain" lb-01
    grxrdinfo "$domain" web-01
    grxrdinfo "$domain" web-02
else
    # Rechercher les informations sur le sous-domaine spécifié
    grxrdinfo "$domain" "$subdomain"
fi
